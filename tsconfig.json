{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "references": [ { "path": "/src", "prepend": true } ],
  "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" }
}
